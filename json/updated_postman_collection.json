            "url": {"raw": "{{base_url}}/api/v1/users/:id/assign-role", "host": ["{{base_url}}"], "path": ["api", "v1", "users", ":id", "assign-role"], "variable": [{"key": "id", "value": "1"}]},
            "description": "Assign role to user"
          }
        },
        {
          "name": "Remove Role from User",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}, {"key": "Content-Type", "value": "application/json"}],
